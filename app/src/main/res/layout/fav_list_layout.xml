<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/favCourseName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_weight="1"
        android:text="@string/courseNameLbl" />

    <TextView
        android:id="@+id/favCourseLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/courseLocationLbl" />

    <TextView
        android:id="@+id/favCoursePrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/coursePriceLbl" />

    <Button
        android:id="@+id/favRemove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/del_icon"
        android:layout_marginEnd="50dp"
        android:background="@null"
        android:layout_weight="1" />
</LinearLayout>